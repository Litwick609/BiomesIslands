<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="PlantBase">
    <defName>BiomesIslands_Kelp</defName>
    <label>kelp</label>
    <description>An aquatic plant</description>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <pathCost>20</pathCost>
    <graphicData>
	  <graphicClass>Graphic_Single</graphicClass>
	  <texPath>Things/Plant/Kelp/Kelp</texPath>
    </graphicData>
    <modExtensions>
        <li Class="BiomesCore.DefModExtensions.Biomes_WaterPlant">
            <allowInFreshWater>false</allowInFreshWater>
            <allowInSaltWater>true</allowInSaltWater>
            <allowInShallowWater>true</allowInShallowWater>
            <allowInDeepWater>false</allowInDeepWater>
            <allowOnLand>false</allowOnLand>
        </li>
    </modExtensions>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <plant>
		<fertilityMin>0.5</fertilityMin>
		<fertilitySensitivity>1</fertilitySensitivity>
		<growDays>3</growDays>
		<maxMeshCount>4</maxMeshCount>
		<visualSizeRange>1.2~1.5</visualSizeRange>
		<topWindExposure>0.2</topWindExposure>
		<wildClusterRadius>8</wildClusterRadius>
		<wildClusterWeight>20</wildClusterWeight>
        <wildOrder>1</wildOrder>
        <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
    </plant>
  </ThingDef>


